{
  "name": "London Underground status updates",
  "short_name": "Tube status",
  "version": "3.1.0",
  "manifest_version": 2,
  "description": "London Underground disruption alerts for the Tube, Overground, TfL Rail, DLR & Tram.",
  "icons": {
    "16": "images/default.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_icon": "images/default.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["config.js", "helpers.js", "background.js"]
  },
  "permissions": ["https://api.tfl.gov.uk/", "alarms"]
}
